{
  "name": "react-client-ts",
  "version": "1.6.10",
  "private": true,
  "license": "none",
  "scripts": {
    "start": "webpack-dev-server --progress --color --config internal/webpack/webpack.config.development.js",
    "clean:build": "rm -rf ./dist",
    "build": "yarn clean:build && webpack --color --config internal/webpack/webpack.config.production.js",
    "lint": "tslint -c tslint.json src/**/*.ts src/**/*.tsx",
    "test:watch": "jest --watchAll",
    "test": "jest --ci --runInBand"
  },
  "dependencies": {
    "core-js": "^2.5.3",
    "history": "^4.7.2",
    "mobx": "^3.4.1",
    "mobx-little-router": "^1.6.10",
    "mobx-little-router-react": "^1.6.10",
    "mobx-react": "^4.3.5",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "whatwg-fetch": "2.0.3"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.3",
    "@types/jest": "^21.0.0",
    "@types/react": "16.0.31",
    "@types/react-dom": "^16.0.3",
    "@types/react-hot-loader": "^3.0.4",
    "dotenv": "4.0.0",
    "fork-ts-checker-webpack-plugin": "^0.2.8",
    "html-webpack-plugin": "^2.28.0",
    "jest": "^22.0.3",
    "prettier": "^1.9.2",
    "react-hot-loader": "^3.0.0",
    "source-map-loader": "^0.2.1",
    "styled-components": "^2.3.3",
    "ts-jest": "^22.0.0",
    "ts-loader": "^3.0.0",
    "tslint": "^5.8.0",
    "tslint-react": "^3.2.0",
    "typescript": "2.6.2",
    "typescript-styled-plugin": "^0.2.2",
    "uglifyjs-webpack-plugin": "^1.0.0",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.9.7"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "skipBabel": true
      }
    },
    "setupFiles": [
      "<rootDir>/internal/tests/browserMocks.js"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.tsx?$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/internal/tests/fileMock.js",
      "\\.(css|scss)$": "<rootDir>/internal/tests/styleMock.js"
    }
  }
}
